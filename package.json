{
  "name": "dashy",
  "version": "1.0.0",
  "description": "Dashboard for Gocd",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiku/dashy.git"
  },
  "author": "Chirantan Mitra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chiku/dashy/issues"
  },
  "homepage": "https://github.com/chiku/dashy#readme",
  "dependencies": {
    "domchanger": "^1.0.2",
    "nanoajax": "^0.4.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "reportDir": "out/coverage"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "csslint": "^1.0.5",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "gulp": "^3.9.1",
    "gulp-cssnano": "^2.1.2",
    "gulp-htmlmin": "^3.0.0",
    "gulp-jsbeautifier": "^2.0.4",
    "html-webpack-plugin": "^2.28.0",
    "htmlhint": "^0.9.13",
    "install": "^0.8.7",
    "mocha": "^3.2.0",
    "ncp": "^2.0.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "clean": "rimraf ./out",
    "compile": "webpack && ncp src/favicon.ico out/public/favicon.ico",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run mocha",
    "lint:css": "csslint 'public/main.css'",
    "lint:html": "htmlhint 'public/*.html'",
    "lint:js": "eslint ./src ./test .",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "lint:fix": "eslint ./src ./test . --fix && gulp html-format css-format",
    "mocha": "mocha --compilers js:babel-core/register 'test/**/*.test.js'",
    "mocha:watch": "npm run mocha -- --watch --reporter dot",
    "test": "npm run lint && npm run coverage"
  }
}
